<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.admin.task1.product.activity.ProductDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_toolbar"></include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:weightSum="1">

            <com.thapovan.android.customui.TouchImageView
                android:id="@+id/product1"
                android:layout_width="320dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                tools:src="@mipmap/ic_launcher" />

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="0.83"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/linear_layout_gallery"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="MobileName"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/modelName"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="model"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Special Price"
                    android:textAlignment="viewStart"
                    android:textColor="#168423" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ends in few hours"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="\u20B9"
                android:textAlignment="viewStart"
                android:textColor="@color/TextDark"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/prize"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:text="9999"
                android:textAlignment="viewStart"
                android:textColor="@color/TextDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productMode2"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11% off"
                android:textAlignment="viewStart"
                android:textColor="#168423"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingRight="100dp"
                android:paddingTop="10dp"
                android:src="@drawable/f_assured" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/rating_corner"
                android:drawableRight="@drawable/ic_star_border_black_24dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="3.8"
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ratingInWords"
                android:layout_width="186dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="120 ratings &amp; 29 reviews"
                android:textAlignment="viewStart"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/favourite_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:gravity="center_vertical"
                android:src="@drawable/ic_favourite_product_icon"
                android:background="@drawable/button_background"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/allDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:gravity="center_vertical"
                android:text="All Details"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <Button
                android:id="@+id/decrease"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="-" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="1"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increase"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#f2f0f0"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/addToCart" />

                <Button
                    android:id="@+id/btn_buy_now"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/buyNow" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
