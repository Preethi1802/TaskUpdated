<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.task1.product.activity.ProductDescriptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="389dp"
            android:orientation="vertical"
            android:weightSum="1">

            <com.thapovan.android.customui.TouchImageView
                android:id="@+id/product1"
                android:layout_width="350dp"
                android:layout_height="280dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:src="@mipmap/ic_launcher" />

            <HorizontalScrollView
                android:layout_width="325dp"
                android:layout_height="100dp"
                android:layout_weight="0.83"
                android:layout_marginLeft="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/linear_layout_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:orientation="horizontal">

                </LinearLayout>

            </HorizontalScrollView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productName1"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:text="MobileName"
                android:textAlignment="viewStart"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/modelName"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:gravity="center"
                android:text="model"
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="91dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Special Price"
                    android:textAlignment="viewStart"
                    android:textColor="#168423" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Ends in few hours"
                    android:textAlignment="viewStart" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:weightSum="9">
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:text="\u20B9"
                android:gravity="center"
                android:textAlignment="viewStart"
                android:textColor="@color/TextDark"
                android:textSize="20dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/prize"
                android:layout_width="92dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:text="9999"
                android:textAlignment="viewStart"
                android:textColor="@color/TextDark"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productMode2"
                android:layout_width="62dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11% off"
                android:textAlignment="viewStart"
                android:textColor="#168423"
                android:textSize="15dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="10dp"
                android:paddingRight="100dp"
                android:paddingTop="10dp"
                android:src="@drawable/f_assured" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/rating"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/rating_corner"
                android:drawableRight="@drawable/ic_star_border_black_24dp"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:text="3.8"
                android:textAlignment="viewStart"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/ratingInWords"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="120 ratings &amp; 29 reviews"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/allDetails"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="All Details"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/black"
                android:textAlignment="viewStart"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_keyboard_arrow_right_black_24dp"
                />


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#f2f0f0"
                android:orientation="horizontal"
                android:weightSum="10">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/addToCart" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="5"
                    android:background="@android:color/white"
                    android:text="@string/buyNow" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
